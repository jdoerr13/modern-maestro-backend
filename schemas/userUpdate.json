{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/userUpdate.json",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "minLength": 3,
      "maxLength": 255
    },
    "password": {
      "type": "string",
      "minLength": 5
    },
    "email": {
      "type": "string",
      "minLength": 6,
      "maxLength": 255,
      "format": "email"
    },
    "firstName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "preferences": {
      "type": "object"
    },
    "isAdmin": {
      "type": "boolean"
    },
    "user_type": {
      "type": "string"
    }
  },
  "additionalProperties": false
}